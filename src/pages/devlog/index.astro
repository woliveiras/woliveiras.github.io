---
import Footer from "$components/Footer.astro";
import Header from "$components/Header.astro";
import { Content } from "$content/devlog/devlog.mdx";
import BaseLayout from "$layouts/BaseLayout.astro";
import BlogPost from "$layouts/BlogPost.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../config.json";
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Header active="devlog" />

  <main class="max-w-2xl lg:max-w-3xl mx-auto mt-8 px-4">
    <h2 class="text-3xl font-bold mb-4">Log</h2>
    <BlogPost>
      <Content />
    </BlogPost>
  </main>

  <Footer />
</BaseLayout>

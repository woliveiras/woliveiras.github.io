---
import { getBlogPosts } from "src/utils";
import { Content } from "$content/info/intro.mdx";
import PostList from "$layouts/PostList.astro";
import { BASE, NAME, POSTS_PER_PAGE, SOCIAL_LINKS } from "../config.json";

const posts = (await getBlogPosts()).splice(0, POSTS_PER_PAGE);

const total = Math.ceil((await getBlogPosts()).length / POSTS_PER_PAGE);
---

<PostList {posts} totalPages={total} currentPage={1} showFeatured>
  <h1 class="sr-only">Welcome to {NAME}</h1>
  <Content />

  <div class="flex justify-center items-center gap-x-6 md:order-2">
    {
      SOCIAL_LINKS.FACEBOOK_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.FACEBOOK_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">Facebook</span>
          <svg
            class="h-6 w-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.BLUESKY_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.BLUESKY_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">Bluesky</span>

          <svg
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="-40 -40 680 620"
            version="1.1"
            class="h-6 w-6"
            aria-hidden="true"
          >
            <path d="m135.72 44.03c66.496 49.921 138.02 151.14 164.28 205.46 26.262-54.316 97.782-155.54 164.28-205.46 47.98-36.021 125.72-63.892 125.72 24.795 0 17.712-10.155 148.79-16.111 170.07-20.703 73.984-96.144 92.854-163.25 81.433 117.3 19.964 147.14 86.092 82.697 152.22-122.39 125.59-175.91-31.511-189.63-71.766-2.514-7.3797-3.6904-10.832-3.7077-7.8964-0.0174-2.9357-1.1937 0.51669-3.7077 7.8964-13.714 40.255-67.233 197.36-189.63 71.766-64.444-66.128-34.605-132.26 82.697-152.22-67.108 11.421-142.55-7.4491-163.25-81.433-5.9562-21.282-16.111-152.36-16.111-170.07 0-88.687 77.742-60.816 125.72-24.795z" />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.INSTAGRAM_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.INSTAGRAM_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">Instagram</span>
          <svg
            class="h-6 w-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.TWITTER_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.TWITTER_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">X</span>
          <svg
            class="h-6 w-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M13.6823 10.6218L20.2391 3H18.6854L12.9921 9.61788L8.44486 3H3.2002L10.0765 13.0074L3.2002 21H4.75404L10.7663 14.0113L15.5685 21H20.8131L13.6819 10.6218H13.6823ZM11.5541 13.0956L10.8574 12.0991L5.31391 4.16971H7.70053L12.1742 10.5689L12.8709 11.5655L18.6861 19.8835H16.2995L11.5541 13.096V13.0956Z" />
          </svg>
        </a>
      ) : null
    }{
      SOCIAL_LINKS.LINKEDIN_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.LINKEDIN_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">LinkedIn</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.SUBSTACK_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.SUBSTACK_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">Substack</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            shape-rendering="geometricPrecision"
            text-rendering="geometricPrecision"
            image-rendering="optimizeQuality"
            fill-rule="evenodd"
            clip-rule="evenodd"
            viewBox="0 0 448 511.471"
            fill="currentColor"
            class="w-4 h-4"
          >
            <path d="M0 0h448v62.804H0V0zm0 229.083h448v282.388L223.954 385.808 0 511.471V229.083zm0-114.542h448v62.804H0v-62.804z" />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.GITHUB_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.GITHUB_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">GitHub</span>

          <svg
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            class="w-6 h-6"
          >
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.YOUTUBE_URL ? (
        <a
          target="_blank"
          href={SOCIAL_LINKS.YOUTUBE_URL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">YouTube</span>
          <svg
            class="h-7 w-7"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.EMAIL ? (
        <a
          target="_blank"
          href={"mailto:" + SOCIAL_LINKS.EMAIL}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">{SOCIAL_LINKS.EMAIL}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-6 h-6"
          >
            <path d="M1.5 8.67v8.58a3 3 0 003 3h15a3 3 0 003-3V8.67l-8.928 5.493a3 3 0 01-3.144 0L1.5 8.67z" />
            <path d="M22.5 6.908V6.75a3 3 0 00-3-3h-15a3 3 0 00-3 3v.158l9.714 5.978a1.5 1.5 0 001.572 0L22.5 6.908z" />
          </svg>
        </a>
      ) : null
    }
    {
      SOCIAL_LINKS.SHOW_RSS ? (
        <a
          target="_blank"
          href={BASE + "/rss.xml"}
          class="text-base-600 hover:text-base-800 dark:text-base-400 dark:hover:text-base-200"
        >
          <span class="sr-only">RSS feed</span>

          <svg
            class="w-6 h-6"
            viewBox="-1 -1 22 22"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
          >
            <rect x="0" fill="none" width="20" height="20" />

            <g>
              <path d="M14.92 18H18C18 9.32 10.82 2.25 2 2.25v3.02c7.12 0 12.92 5.71 12.92 12.73zm-5.44 0h3.08C12.56 12.27 7.82 7.6 2 7.6v3.02c2 0 3.87.77 5.29 2.16C8.7 14.17 9.48 16.03 9.48 18zm-5.35-.02c1.17 0 2.13-.93 2.13-2.09 0-1.15-.96-2.09-2.13-2.09-1.18 0-2.13.94-2.13 2.09 0 1.16.95 2.09 2.13 2.09z" />
            </g>
          </svg>
        </a>
      ) : null
    }
  </div>

  <div class="border-t pt-8 mt-8">
    <h2>Latest notes</h2>
  </div>
</PostList>
